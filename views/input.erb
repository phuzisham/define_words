<div class='row'>
  <div class='col-sm-8'>
    <div id='createWord' class='well'>
      <h1>Add words and define them.</h1>
      <form action='/output' method='post'>
        <div class='form-group'>
          <label for='name'>Word:</label>
          <input id='name' name='name' class='form-control' type='text'>
        </div>
        <div class='form-group'>
          <label for='definition'>Definition:</label>
          <input id='definition' name='definition' class='form-control' type='text'>
        </div>
        <button type='submit' class='btn'>Add!</button>
      </form>
    </div>
  </div>

  <div class='col-sm-4'>
    <div id='displayWords' class='well'>
      <h3>Words:</h3>
      <% @words.each do |word| %>
        <h4><a href='/output/<%= word.name %>'><%= word.name %> <%= word.definition %></a></h4>
      <% end %>
    </div>
  </div>
</div>
