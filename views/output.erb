<div class='row'>
  <div class='col-sm-4'>
    <div id='displayImage'>
      <img src='/img/dictionary.png' alt='Picture of a dictionary.'>
    </div>
  </div>

  <div class='col-sm-8'>
    <div id='displayWords' class='well'>
      <h3><%= @word.name %>: </h3>
      <ul>
        <% @definitions.each() do |definition| %>
          <li><%= definition %></li>
        <% end %>
      </ul>
      <br>
      <a id='home' href='/'>Return to home page!</a>
    </div>
  </div>
</div>

<div id='createWord' class="well">
  <h2>Add a definition to this word:</h2>
  <form action='/addDef' method='post'>
    <div class='form-group'>
      <label for='name'>Word:</label>
      <input id='name' name='name' class='form-control' type='text'>
    </div>
    <div class='form-group'>
      <label for='definition'>Definition:</label>
      <input id='definition' name='definition' class='form-control' type='text'>
    </div>
    <button type='submit' class='btn'>Add Definition!</button>
  </form>
</div>
